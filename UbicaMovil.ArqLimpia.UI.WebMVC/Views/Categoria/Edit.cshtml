@model UbicaMovil.ArqLimpia.BL.DTOs.CategoriaDTOs.CategoriaUpdateDTO

@{
    ViewData["Title"] = "Editar - ";
}

<!-- Font special for pages-->
<link href="https://fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

<link href="~/css/xmain.css" rel="stylesheet" media="all">

<div class="py-5 bg-gra-editar font-poppins">
    <div class="container py-md-5" id="x">
        <div class="container-md">
            <div class="card bg-dark text-white px-3 pt-2">
                <div class="card-body">
                    <h4 class="fs-3 text-center fw-bolder pt-5">¿Deseas modificar el registro?</h4>
                    <form asp-action="Edit">
                        <div class="pt-5">
                            <div class="row g-3">
                                <div class="col-12">
                                    <label class="form-label">Nombre</label>
                                    <input asp-for="Nombre" type="text" class="form-control">
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>
                                <div class="col-12 text-center py-3">
                                    <button type="submit" class="btn btn--editar">Guardar</button>
                                    <a class="btn btn-outline-light" asp-action="Index">Regresar</a><br />
                                    <span style="color:red">@ViewBag.ErrorMessage</span>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/global.js"></script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}