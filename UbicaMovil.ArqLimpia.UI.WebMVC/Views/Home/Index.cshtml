@{
    ViewData["Title"] = "";
}

<link href="~/css/not.css" rel="stylesheet">
<div class="container">
    <h1 class="text-center pt-3" id="titulo"><Strong>UbicaMovil</Strong></h1>
<p class="text-center fw-normal fs-5" id="lema">
    Empieza a buscando tus empresas con nuestro buscador
</p>
<!-- Contenedor del buscador -->
<div id="search-container">
    <!-- Campo de búsqueda con autocompletado -->
    <input id="search-input" type="text" placeholder="Buscar">
    <!-- Combo box para seleccionar el modo de transporte -->
    <select id="mode-select">
        <option value="DRIVING">Automóvil</option>
        <option value="WALKING">Caminando</option>
    </select>
    <!-- Botón para buscar -->
    <button class="btn btn-warning" id="search-button">Buscar</button>
</div>

<!-- Elemento contenedor del mapa -->
<div id="map"></div>

<!-- Elemento contenedor de las indiaciones -->
<div id="directions-panel" class="hidden"></div>
</div>

<body>
    <button id="butInstall" aria-label="Install" hidden>Instalar app</button>
    <div id="main"></div>

    <script>
        if ('ServiceWorker' in navigator) {
            window.addEventListener('load', () => {
                navigator.serviceWorker.register('Service-worker.js').then((reg) => {
                    console.log("Service worker registered", reg);
                })
            })
        }
    </script>

    <div id="cookie-notice" class="cookie-notification">
        <div class="container">

            <div class="wp-block-column cookie-content">
                <div class="ct-cookies-content">Descarga gratis UbicaMovil para Android. Todos los mapas en tu bolsillo</div>
            </div>
            <button class="ct-accept" onclick="acceptCookie();">Descargar</button><button class="ct-close" onclick="myFunction()">×</button>
        </div>
    </div>
    <script src="~/js/not.js"></script>
</body>